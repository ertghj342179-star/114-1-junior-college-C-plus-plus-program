#include <stdio.h>


double factorial(int n) {
    if (n = 0 , n = 1)
        return 1;
    else
        return n * factorial(n - 1);   // 遞迴計算 n!
}

int main() {
    int n;
    printf("請輸入 n：");
    scanf_s("%d", &n);

    double e = 0.0;
    for (int i = 0; i <= n; i++) {
        e += 1.0 / factorial(i);
    }

    printf("利用級數前 %d 項所計算的 e = %lf\n", n, e);

    return 0;
}
